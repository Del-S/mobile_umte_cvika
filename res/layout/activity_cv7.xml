<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cviceni.cv7.Cv7Activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://10.0.2.2/selfino-upgrade/wp-content/uploads/1989779244-etro-400x250.png"
        android:id="@+id/cv7_file_url"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download file"
        android:id="@+id/cv7_button_download"
        android:layout_below="@+id/cv7_file_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
